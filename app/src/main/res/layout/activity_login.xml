<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/iiitd"
    tools:context="com.creation.events.eventsapp.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY EVENTS @ IIITD"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="50sp"
            android:textColor="@color/yellowColour"
            android:textStyle="bold"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/sign_in_button"
            android:layout_width="190sp"
            android:layout_height="45sp"
            android:text="Sign In with Google"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sign_in_button"

            android:adjustViewBounds="true"
            android:padding="0.5dp"
            android:scaleType="fitCenter"
            android:onClick="showLoginDialog"/>

    </RelativeLayout>

</RelativeLayout>
